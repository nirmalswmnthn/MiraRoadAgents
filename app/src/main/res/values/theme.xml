<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PageHead" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themePINK</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="SubHead" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/themeBLUE</item>
    </style>

    <style name="Topic" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/themeBLUE</item>
    </style>

    <style name="Field" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/themeBLACK</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/themeBLACK</item>
    </style>

    <style name="LabelText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/themePINK</item>
    </style>

    <style name="InputText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/edittext</item>
    </style>

    <style name="DropDown">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/dropdown</item>
        <item name="android:textColor">@color/themeBLACK</item>
    </style>

    <style name="Comment" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/themeBLUE</item>
    </style>

    <style name="ClickLinkSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/themeBLUE</item>
        <item name="android:background">@drawable/clicklink</item>
    </style>

    <style name="ClickLinkSmallSelected" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/themeBLUE</item>
        <item name="android:background">@drawable/clicklinkpressed</item>
    </style>

    <style name="ClickLink" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/themeBLUE</item>
        <item name="android:background">@drawable/clicklink</item>
    </style>

    <style name="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/themeBLUE</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ListButton" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/themeBLUE</item>
        <item name="android:background">@drawable/listbutton</item>
    </style>

    <style name="Checkbox">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RowHead" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/themeLISTHEAD</item>
    </style>

    <style name="Row" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555</item>
    </style>

    <style name="ProgressBack" parent="@android:style/TextAppearance.Small">
        <item name="android:background">#4Dcccccc</item>
    </style>

</resources>
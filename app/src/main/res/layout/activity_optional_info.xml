<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeWHITE"
    tools:context=".OptionalInfoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <CheckBox
            android:id="@+id/cb_OC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OC - Occupancy Certificate" />

        <CheckBox
            android:id="@+id/cb_TER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ter - Terrace" />

        <CheckBox
            android:id="@+id/cb_OP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OP - Open parking" />

        <CheckBox
            android:id="@+id/cb_SP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SP - Stilt Parking" />

        <CheckBox
            android:id="@+id/cb_GF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GF - Garden Facing" />

        <CheckBox
            android:id="@+id/cb_BF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BF - Back facing" />

        <CheckBox
            android:id="@+id/cb_RF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RF - Road Facing" />

        <CheckBox
            android:id="@+id/cb_FW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FW - Full white" />

        <CheckBox
            android:id="@+id/cb_CM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CM - Club Membership" />

        <CheckBox
            android:id="@+id/cb_BAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bal - Balcony" />

        <CheckBox
            android:id="@+id/cb_FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FF - Fully Furnished" />

        <CheckBox
            android:id="@+id/cb_SF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SF - Semi Furnished" />

        <CheckBox
            android:id="@+id/cb_UC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UC - Under Construction" />

        <CheckBox
            android:id="@+id/cb_HD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HD - Heavy Deposit" />

        <CheckBox
            android:id="@+id/cb_MB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MB - Master Bed" />

        <!--
             <Button
            android:id="@+id/btnSave"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/save" />
        -->
    </LinearLayout>

</ScrollView>